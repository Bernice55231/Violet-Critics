<head>
    <h1>Violet Critics</h1> 
    {{#if user}}
        <div id="username">
            {{user}} 
            <a href="/logout">Logged Out</a>
        </div>
         {{!-- <div id="starlist">
            <a href="/">Home</a>
        </div> --}}
        <a href="/" id="starlist">
            <div>Home</div>
        </a>
    {{else}}
        <a href="/login">
            <button id="user">Login</button>
        </a>
    {{/if}}
</head>

{{#each starlists as |l|}}
<div class="display">
    <div class="starlist-bar">
        <div class="listname">{{l.list_name}}</div>
        <div class="mvbar2">   
            {{#if l.items}}
                {{#each l.items as |m|}}
                    <div class="grid-item">
                        <div class="image">
                            <a href="/movies/{{m.slug}}" title={{m.name}}>
                                <img loading="lazy" class="poster" src={{m.poster}}>
                            </a>
                        </div>
                        <div class="content">
                            <a href="/movies/{{m.slug}}" title={{m.name}}>
                                <p>
                                    {{m.name}}
                                </p>
                            </a>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
    
</div>
{{/each}}
